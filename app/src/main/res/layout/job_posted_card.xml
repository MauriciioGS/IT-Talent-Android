<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen6dp"
    android:layout_marginBottom="@dimen/dimen12dp"
    style="@style/Cards">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen12dp">

        <TextView
            android:id="@+id/tvJobName"
            style="@style/SubtitleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Software Engineer" />

        <TextView
            android:id="@+id/tvEnterprise"
            style="@style/Body3Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJobName"
            tools:text="Nombre de la empresa" />

        <TextView
            android:id="@+id/tvPublisher"
            style="@style/Body3Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterprise"
            tools:text="Publicado por: Mauricio" />

        <TextView
            android:id="@+id/ivVacancies"
            style="@style/Body3Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3dp"
            android:textColor="@color/success"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPublisher"
            tools:text="3 Vacantes" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/Body3Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/disable"
            android:layout_marginTop="@dimen/dimen3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivVacancies"
            tools:text="Hace 2 dias"/>

        <TextView
            android:id="@+id/tvApplicants"
            style="@style/Body3Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3dp"
            android:layout_marginStart="@dimen/dimen6dp"
            app:layout_constraintStart_toEndOf="@+id/ivVacancies"
            app:layout_constraintTop_toBottomOf="@+id/tvPublisher"
            tools:text="|  10 Solicitantes" />

        <ImageView
            android:id="@+id/ivEnterprise"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginEnd="@dimen/dimen16dp"
            android:src="@drawable/enterprise"
            app:layout_constraintBottom_toBottomOf="@+id/ivVacancies"
            app:layout_constraintEnd_toStartOf="@+id/ibEdit"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>