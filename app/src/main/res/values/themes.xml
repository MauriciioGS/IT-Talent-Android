<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITTalent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/tertiary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>
    
    <style name="PrimaryButtonContinue" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="PrimaryButtonDisabled" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/disable</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SecondaryButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">Continuar</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TertiaryPrimaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <!--EditText-->
    <style name="EditTextGeneral" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="H6Primary" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/nunitosasnssemibold</item>
        <item name="android:textSize">@dimen/dimen20dp</item>
        <item name="android:textColor">@color/textBold</item>
    </style>

    <style name="BodySecondary" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textSize">@dimen/dimen16dp</item>
    </style>

    <style name="SubtitleSecondary" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">@dimen/dimen14dp</item>
        <item name="android:textColor">@color/textBold</item>
    </style>
    
</resources>
