<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITTalent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryVariant</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryVariant</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="BackgroundGeneral" parent="Theme.ITTalent">
        <item name="android:background">@color/disable</item>
    </style>

    <style name="BackgroundGeneralSignIn" parent="Theme.ITTalent">
        <item name="android:background">@color/primaryVariant</item>
    </style>

    <style name="Spacer" parent="Theme.ITTalent">
        <item name="android:background">@color/main</item>
    </style>

    <style name="MyDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="buttonBarButtonStyle">@style/TertiaryPrimaryButton</item>
    </style>

    <style name="PrimaryButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/secondaryVariant</item>
        <item name="android:textColor">@color/main</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="PrimaryButtonEndIcon" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/secondaryVariant</item>
        <item name="android:textColor">@color/main</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="icon">@drawable/ic_navigate_next</item>
        <item name="iconGravity">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="PrimaryButtonDisabled" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/primaryVariant2</item>
        <item name="android:textColor">@color/main</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SecondaryButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/secondaryVariant</item>
        <item name="background">@color/transparent</item>
        <item name="android:textColor">@color/main</item>
        <item name="fontFamily">@font/nunitosanseegular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">Continuar</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TertiaryPrimaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/main</item>
        <item name="fontFamily">@font/nunitosasnssemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <!--Cards-->
    <style name="Cards" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryVariant</item>
        <item name="cardCornerRadius">@dimen/dimen10dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!--Cards-->
    <style name="Cards2" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryVariant</item>
        <item name="cardCornerRadius">@dimen/dimen10dp</item>
        <item name="cardElevation">4dp</item>
    </style>



    <!--EditText-->
    <style name="EditTextGeneral" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="boxStrokeColor">@color/main</item>
        <item name="android:textColorHint">@color/main</item>
        <item name="hintTextColor">@color/main</item>
        <item name="helperTextTextColor">@color/main</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textAppearance">@style/Body3Primary</item>
        <item name="hintTextAppearance">@style/Body3Secondary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!--EditText-->
    <style name="EditTextIcon" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_add</item>
        <item name="endIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/main</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!--DropdownList-->
    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="endIconTint">@color/icon</item>
        <item name="boxStrokeWidth">@dimen/dimen0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!--DropdownList-->
    <style name="DropdownMenuOutline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="endIconTint">@color/main</item>
        <item name="boxStrokeColor">@color/main</item>
        <item name="android:textColorHint">@color/main</item>
        <item name="hintTextColor">@color/main</item>
        <item name="helperTextTextColor">@color/main</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textAppearance">@style/Body3Primary</item>
        <item name="hintTextAppearance">@style/Body3Secondary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!--DropdownList-->
    <style name="DropdownMenuOutlineOnPrimary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/icon</item>
        <item name="boxStrokeWidth">@dimen/dimen1dp</item>
        <item name="boxStrokeColor">@color/icon</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!--Chips-->
    <style name="MyChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_height">@dimen/dimen64dp</item>
        <item name="chipBackgroundColor">@color/secondaryVariant</item>
        <item name="android:textAppearance">@style/SubtitleSecondary</item>
        <item name="android:textColor">@color/textBold</item>
        <item name="chipCornerRadius">@dimen/dimen10dp</item>
    </style>

    <!--Chips-->
    <style name="MyChipOutlined" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primaryVariant</item>
        <item name="android:textAppearance">@style/SubtitleSecondary</item>
        <item name="android:textColor">@color/main</item>
        <item name="chipStrokeColor">@color/main</item>
        <item name="chipStrokeWidth">@dimen/dimen1dp</item>
        <item name="chipCornerRadius">@dimen/dimen10dp</item>
    </style>

